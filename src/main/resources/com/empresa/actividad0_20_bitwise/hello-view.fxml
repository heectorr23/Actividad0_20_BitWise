<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.empresa.actividad0_20_bitwise.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TextField fx:id="input1" promptText="Ingresa el primer número"/>
  <TextField fx:id="input2" promptText="Ingresa el segundo número"/>

  <Button text="AND" onAction="#onAndButtonClick"/>
  <Button text="OR" onAction="#onOrButtonClick"/>
  <Button text="XOR" onAction="#onXorButtonClick"/>
  <Button text="NOT" onAction="#onNotButtonClick"/>
  <Button text="Desplazar a la izquierda" onAction="#onShiftLeftButtonClick"/>
  <Button text="Desplazar a la derecha" onAction="#onShiftRightButtonClick"/>
</VBox>
